<div class="user-page">
  <div class="user-main text-center">
    <h2 class="fadein message-1 mb-5 mt-5">Welcome!</h2>
    <%= link_to "ログインはこちら", new_session_path(resource_name), class: "render-login-link" %>
    <h4 class="fadein message-2 mt-4 mb-2">登録項目に情報を入力してください</h4>
    <h6 class="fadein message-3 mb-2">※項目は全て入力必須です</h6>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "planners/shared/error_messages", resource: resource %>
      <div class="fadein user-form text-center">
        <h5 class=" mt-5">アカウント名</h5>
        <div class="name-form">
          <div class="fadein input-form">
            <%= f.text_field :nickname, class: "form"%>
          </div>
        </div>
        <h5 class=" mt-5">名前</h5>
        <div class="name-form d-flex justify-content-around">
          <div class="fadein input-form">
            <%= f.text_field :last_name, class: "form", placeholder: "姓" %>
          </div>
          <div class="fadein input-form">
            <%= f.text_field :first_name, class: "form", placeholder: "名" %>
          </div>
        </div>
        <h5 class="mt-5">フリガナ<h5>
        <div class="name-form d-flex justify-content-around">
          <div class="fadein input-form">
            <%= f.text_field :last_name_kana, class: "form", placeholder: "セイ" %>
          </div>
          <div class="fadein input-form">
            <%= f.text_field :first_name_kana, class: "form", placeholder: "メイ" %>
          </div>
        </div>
        <h5 class="mt-5">メールアドレス<h5>
        <div class="fadein input-form">
          <%= f.email_field :email, class:"password-form", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
        </div>
        <h5 class="mt-5">性別</h5>
        <div class="fadein input-form">
          <%= f.collection_select(:gender_id, Gender.all, :id, :name, {}, {class:"select-box", id:"gender"}) %>
        </div>
        <div class="fadein input-form">
            <h5 class="form-text mt-5">生年月日</h5>
          <div class='birth-form d-flex'>
            <%= raw sprintf(( 
              f.date_select :birth_date, 
                  {use_month_numbers: true, prompt:'--', start_year: 1930, end_year: (Time.now.year - 5),
                  date_separator: '%s'}, {class: 'birth-select'}),
                  '<p class="p-year-month"> 年 </p>', '<p class="p-year-month"> 月 </p>') + '<p class="p-day"> 日 </p>'%>
          </div>
        <h5 class="mt-5">お住まい地域</h5>
        <div class="fadein input-form mb-3">
          <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box", id:"prefecture"}) %>
        </div>
        <h5 class="mt-5">パスワード</h5>
        <div class="fadein input-form mb-3">
          <%= f.password_field :password, class:"password-form", id:"password", placeholder:"8文字以上の半角英数字" %>
        </div>
        <h5 class="mt-5">パスワード(確認)</h5>
        <div class="fadein input-form mb-3">
          <%= f.password_field :password_confirmation, class:"password-form", id:"password-confirmation", placeholder:"再度入力して下さい" %>
        </div>
        <div class="fadein actions mt-5 mb-5">
          <%= f.submit "登録する", class: "submit-btn" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
