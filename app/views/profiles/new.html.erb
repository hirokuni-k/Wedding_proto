<div class="profile-new">
  <div class="new-title">
    プロフィール作成ページ
  </div>
  <%= form_with model: [@planner, @profile], local: true do |f| %>
    <%= f.file_field :images, class: "image-profile", name: 'profile[images][]', id: "profile_image" %>
    <div id="image-list"></div>
    <%= f.text_field :last_name, class: "last-name-profile", placeholder: "姓"%>
    <%= f.text_field :first_name, class: "first-name-profile", placeholder: "名"%>
    <%= f.text_field :last_name_kana, class: "profile-name-kana", placeholder: "姓 フリガナ"%>
    <%= f.text_field :first_name_kana, class: "profile-name-kana", placeholder: "名 フリガナ"%>
    <%= f.collection_select(:gender_id, Gender.all, :id, :name, {}, {class:"gender-select", id:"gender"}) %>
    <%= raw sprintf(( 
              f.date_select :birth_date, 
                  {use_month_numbers: true, prompt:'--', start_year: 1930, end_year: (Time.now.year - 5),
                  date_separator: '%s'}, {class: 'profile-birth'}),
                  '<p class="p-year-month"> 年 </p>', '<p class="p-year-month"> 月 </p>') + '<p class="p-day"> 日 </p>'%>
    <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"prefecture-select", id:"prefecture"}) %>
    <%= f.text_field :word, class: "profile-word", placeholder: "メッセージ"%>
    <%= f.text_field :bridal, class: "profile-bridal", placeholder: "答え"%>
    <%= f.text_field :favorite, class: "profile-favorite", placeholder: "答え"%>
    <%= f.text_field :history, class: "profile-history", placeholder: "答え"%>
    <%= f.text_field :specialty, class: "profile-specialty", placeholder: "答え"%>
     <%= f.submit "登録する", class: "submit-btn" %>
  <% end %>
  </div>
</div>