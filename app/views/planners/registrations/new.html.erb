<div class="planner-page">
  <div class="planner-main text-center">
    <h2 class="fadein message-1 mb-5 mt-5">ようこそプランナー様</h2>
      <div class="render-link">
        <%= render "planners/shared/links" %>
      </div>
    <h4 class="fadein message-2 mt-4 mb-2">登録項目に入力してください</h4>
    <h6 class="fadein message-3 mb-2">※項目は全て入力必須です</h6>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "planners/shared/error_messages", resource: resource %>
      <div class="fadein planner-form text-center">
        <h5 class=" mt-5">名前</h5>
        <div class="name-form d-flex justify-content-around">
          <div class="fadein input-form">
            <%= f.text_field :last_name, class: "form", placeholder: "姓" %>
          </div>
          <div class="fadein input-form">
            <%= f.text_field :last_name, class: "form", placeholder: "名" %>
          </div>
        </div>
        <h5 class="mt-5">フリガナ<h5>
        <div class="name-form d-flex justify-content-around">
          <div class="fadein input-form">
            <%= f.text_field :last_name_kana, class: "form", placeholder: "セイ" %>
          </div>
          <div class="fadein input-form">
            <%= f.text_field :last_name_kana, class: "form", placeholder: "メイ" %>
          </div>
        </div>
        <h5 class="mt-5">性別</h5>
        <div class="fadein input-form">
          <%= f.collection_select(:gender_id, Gender.all, :id, :name, {}, {class:"select-box", id:"gender"}) %>
        </div>
        <div class="fadein input-form">
            <h5 class="form-text mt-5">生年月日</h5>
          <div class='birth-form d-flex'>
            <%= raw sprintf(( 
              f.date_select :birth_date, 
                  {use_month_numbers: true, prompt:'--', start_year: 1930, end_year: (Time.now.year - 5),
                  date_separator: '%s'}, {class: 'birth-select'}),
                  '<p class="p-year-month"> 年 </p>', '<p class="p-year-month"> 月 </p>') + '<p class="p-day"> 日 </p>'%>
          </div>
        <h5 class="mt-5">お住まい地域</h5>
        <div class="fadein input-form mb-3">
          <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box", id:"prefecture"}) %>
        </div>
        <div class="fadein actions mt-5 mb-5">
          <%= f.submit "登録する", class: "submit-btn" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
